<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view_id"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    cardview:cardCornerRadius="8dp"
    android:elevation="5dp">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        xmlns:tools="http://schemas.android.com/tools">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:transitionName="image_transition"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:padding="5dp"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_marginEnd="20dp"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="41dp"
            android:src="@drawable/avatar"
            android:id="@+id/profileActivity"/>


        <TextView
            android:layout_width="wrap_content"
            android:transitionName="text_transition"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/profileActivity"
            android:layout_centerVertical="true"
            android:text="Title"
            android:textColor="#000"
            android:textSize="25sp"
            android:fontFamily="@font/heebo_bold_xml"
            android:id="@+id/titleActivity"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/titleActivity"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/profileActivity">


            <TextView
                android:layout_width="wrap_content"
                android:transitionName="text_transition"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="15sp"
                android:fontFamily="@font/heebo_bold_xml"
                android:id="@+id/amountNumber"/>

            <TextView
                android:layout_width="wrap_content"
                android:transitionName="text_transition"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="15sp"
                android:fontFamily="@font/heebo_bold_xml"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginStart="2dp"
                android:transitionName="text_transition"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="10sp"
                android:fontFamily="@font/heebo_bold_xml"
                android:id="@+id/amountMaxNumber"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="football"
            android:textSize="20sp"
            android:textColor="@color/accent"
            android:id="@+id/typeActivity"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rishon Lezion"
            android:textSize="20sp"
            android:textColor="@color/colorTextNormal"
            android:id="@+id/locationActivity"/>
    </LinearLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>